<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
    <!--divs used for spacing-->
    <div class="container">
        <h1>Campgrounds Page!</h1>
        <p>View our camp sites from all over the world!</p>
        <!--p tag also used for spacing here-->
        <p>
          <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Site</a>  
        </p>
    </div>
</header>

<div class="container">
<div class="row">
    <div class="col-lg-12">
        <h3>Our Most Popular Sites:</h3>
    </div>
</div>

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail index">
                <img src= "<%= campground.image %>">
                <h4><%= campground.name;%></h4>
                <p>
                   <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
</div>
</div>
</div>

<% include ../partials/footer %>