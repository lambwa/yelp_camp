<% include ../partials/header %>

<p class="pull-right">
    <form action="/campgrounds" method="GET">
        <div class=" form-group">
            <div class="input-group" style="width: 30%; margin-left:auto; margin-right:0">
                <span class="input-group-btn ">
                    <button class="btn btn-primary" type="submit" value="Search"><span class="glyphicon glyphicon-search" aria-hidden="true" ></span></button>
                </span>
                <input type="text" class="form-control" name="search" placeholder="Search all...">
            </div>
        </div>
    </form>
</p>

<header class="jumbotron">
    <!--divs used for spacing-->
    <div class="container">
        <h1><span class="glyphicon glyphicon-tent" aria-hidden="true" ></span>Campgrounds!</h1>
        <p>View our camp sites from all over the world!</p>
        <!--p tag also used for spacing here-->
        <p>
          <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Site</a>  
        </p>
    </div>
</header>

<div class="container">
<div class="row">
    <div class="col-lg-12">
        <h3>Our Most Popular Sites:</h3>
    </div>
</div>

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail index">
                <img src= "<%= campground.image %>">
                <h4><%= campground.name;%></h4>
                <p>
                   <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
</div>
</div>

<% include ../partials/footer %>